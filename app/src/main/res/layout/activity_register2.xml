<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/reg2_et_nickname"
        android:background="@null"
        android:layout_width="@dimen/btn_login"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/reg2_v_line"
        android:inputType="text"
        android:hint="昵称"/>
    <View
        android:id="@+id/reg2_v_line"
        android:layout_width="@dimen/btn_login"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
        android:background="@color/colorGrey21"/>
    <EditText
        android:id="@+id/reg2_et_password"
        android:background="@null"
        android:layout_width="@dimen/btn_login"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reg2_v_line"
        android:inputType="textPassword"
        android:hint="密码"/>
    <View
        android:id="@+id/reg2_v_line2"
        android:layout_width="@dimen/btn_login"
        android:layout_height="1dp"
        android:layout_below="@+id/reg2_et_password"
        android:layout_centerInParent="true"
        android:background="@color/colorGrey21"/>
    <EditText
        android:id="@+id/reg2_et_password_con"
        android:background="@null"
        android:layout_width="@dimen/btn_login"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reg2_v_line2"
        android:inputType="textPassword"
        android:hint="确认密码"/>
    <Button
        android:id="@+id/reg2_btn_reg"
        android:layout_width="@dimen/btn_login"
        android:layout_height="wrap_content"
        android:background="@color/material_blueGrey_900"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/reg2_et_password_con"
        android:textColor="#fff"
        android:text="注册"/>
</RelativeLayout>