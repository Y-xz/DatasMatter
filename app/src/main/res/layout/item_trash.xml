<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_trash_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/item_trash_imgbtn_restore"
            android:layout_width="@dimen/trash_item_icon_size"
            android:layout_height="@dimen/trash_item_icon_size"
            android:layout_marginLeft="@dimen/trash_item_margin"
            android:background="@drawable/restore"/>
        <me.grantland.widget.AutofitTextView
            android:id="@+id/item_trash_tv_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/material_blueGrey_600"
            android:textSize="14sp"/>
        <ImageButton
            android:id="@+id/item_trash_imgbtn_delete"
            android:layout_width="@dimen/trash_item_icon_size"
            android:layout_height="@dimen/trash_item_icon_size"
            android:layout_marginRight="@dimen/trash_item_margin"
            android:background="@drawable/delete" />
    </LinearLayout>
</android.support.v7.widget.CardView>
